@page "/createdelivery"
@inject HttpClient http
@using KoiTravelShop.Model
@inject IJSRuntime JSRuntime
<h3>CreateDelivery</h3>


<form>
    <div class="form-group mb-4">
        <label>Name</label>
        <input type="text" class="form-control" @bind="Delivery.Name" />
    </div>
    <div class="form-group mb-4">
        <label>Location</label>
        <input type="number" class="form-control" @bind="Delivery.Location" />
    </div>
    <div class="form-group mb-4">
        <label>Price</label>
        <input type="number" class="form-control" @bind="Delivery.Price" />
    </div>
    <div class="form-group mb-4">
        <label>Description</label>
        <input type="text" class="form-control" @bind="Delivery.Description" />
    </div>
    <button type="button" class="btn btn-primary" @onclick="HandleCreateOrder">Create Delivery</button>
</form>

@code {
    public DeliveryModel Delivery = new DeliveryModel();
    public async Task HandleCreateOrder()
    {
        Delivery.Id = Guid.NewGuid();
        var res = await http.PostAsJsonAsync<DeliveryModel>("https://localhost:7251/api/Delivery", Delivery);
        if (res.IsSuccessStatusCode)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Create order success");
        }
    }
}
